<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/ivMessageTag"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_message_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="广运通集团版 APP 全新升级!"
        android:textColor="#3068a6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMessageTag"
        app:layout_constraintLeft_toRightOf="@+id/ivMessageTag"
        app:layout_constraintTop_toTopOf="@+id/ivMessageTag" />

    <ImageView
        android:id="@+id/ivMessageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_right"
        app:layout_constraintBottom_toBottomOf="@+id/tvMessage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMessage" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#243662EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>