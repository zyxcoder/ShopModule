<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTitle"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/viewBuleLine"
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:layout_marginStart="11dp"
            android:background="@drawable/shape_blue_line_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/viewBuleLine"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/contract_num_desc" />

        <TextView
            android:id="@+id/tvLableValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvLableName"
            app:layout_constraintLeft_toRightOf="@+id/tvLableName"
            tools:text="#GNXS00050459" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewLineGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#243662EC"
        app:layout_constraintTop_toBottomOf="@+id/clTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>