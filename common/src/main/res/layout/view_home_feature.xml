<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_contract_bg"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/clPlan"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvContract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:drawableRight="@drawable/ic_right"
            android:drawablePadding="7dp"
            android:text="待处理合同"
            android:textColor="#414141"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContractCount"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="11dp"
            android:text="@string/waybill_management"
            android:textColor="#4F85D0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tvContract"
            app:layout_constraintTop_toBottomOf="@+id/tvContract" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_contract_bg"
        app:layout_constraintLeft_toRightOf="@+id/clContract"
        app:layout_constraintRight_toLeftOf="@id/clShipment"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:drawableRight="@drawable/ic_right"
            android:drawablePadding="7dp"
            android:text="待创建计划"
            android:textColor="#414141"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPlanCount"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="11dp"
            android:text="@string/plan_management"
            android:textColor="#4F85D0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tvPlan"
            app:layout_constraintTop_toBottomOf="@+id/tvPlan" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clShipment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_contract_bg"
        app:layout_constraintLeft_toRightOf="@+id/clPlan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvShipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:drawableRight="@drawable/ic_right"
            android:drawablePadding="7dp"
            android:text="待装货"
            android:textColor="#414141"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShipmentCount"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="11dp"
            android:text="@string/stay_tuned"
            android:textColor="#4F85D0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tvShipment"
            app:layout_constraintTop_toBottomOf="@+id/tvShipment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>