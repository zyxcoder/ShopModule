<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clAfterSaleStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp"
    android:paddingBottom="20dp"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gary_f2f5f9"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ivSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_after_sale_complete"
            app:layout_constraintLeft_toLeftOf="@+id/tvSubmit"
            app:layout_constraintRight_toRightOf="@+id/tvSubmit"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="提交申请"
            android:textColor="#04091A"
            android:textSize="12sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvHandle"
            app:layout_constraintTop_toBottomOf="@+id/ivSubmit" />


        <View
            android:id="@+id/viewLineOne"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#3B82F6"
            app:layout_constraintBottom_toBottomOf="@+id/ivSubmit"
            app:layout_constraintLeft_toRightOf="@+id/ivSubmit"
            app:layout_constraintRight_toLeftOf="@+id/ivHandle"
            app:layout_constraintTop_toTopOf="@+id/ivSubmit" />


        <ImageView
            android:id="@+id/ivHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_after_sale_handle"
            app:layout_constraintBottom_toBottomOf="@+id/ivSubmit"
            app:layout_constraintLeft_toLeftOf="@+id/tvHandle"
            app:layout_constraintRight_toRightOf="@+id/tvHandle"
            app:layout_constraintTop_toTopOf="@+id/ivSubmit" />

        <TextView
            android:id="@+id/tvHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台处理"
            android:textColor="#04091A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubmit"
            app:layout_constraintLeft_toRightOf="@+id/tvSubmit"
            app:layout_constraintRight_toLeftOf="@+id/tvRefund"
            app:layout_constraintTop_toTopOf="@+id/tvSubmit" />

        <View
            android:id="@+id/viewLineTwo"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#3B82F6"
            app:layout_constraintBottom_toBottomOf="@+id/ivHandle"
            app:layout_constraintLeft_toRightOf="@+id/ivHandle"
            app:layout_constraintRight_toLeftOf="@+id/ivRefund"
            app:layout_constraintTop_toTopOf="@+id/ivHandle" />

        <ImageView
            android:id="@+id/ivRefund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_after_sale_no_complete"
            app:layout_constraintBottom_toBottomOf="@+id/ivSubmit"
            app:layout_constraintLeft_toLeftOf="@+id/tvRefund"
            app:layout_constraintRight_toRightOf="@+id/tvRefund"
            app:layout_constraintTop_toTopOf="@+id/ivSubmit" />

        <TextView
            android:id="@+id/tvRefund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款/退货中"
            android:textColor="#565D73"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubmit"
            app:layout_constraintLeft_toRightOf="@+id/tvHandle"
            app:layout_constraintRight_toLeftOf="@+id/tvComplete"
            app:layout_constraintTop_toTopOf="@+id/tvSubmit" />

        <View
            android:id="@+id/viewLineThree"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#3B82F6"
            app:layout_constraintBottom_toBottomOf="@+id/ivRefund"
            app:layout_constraintLeft_toRightOf="@+id/ivRefund"
            app:layout_constraintRight_toLeftOf="@+id/ivComplete"
            app:layout_constraintTop_toTopOf="@+id/ivRefund" />


        <ImageView
            android:id="@+id/ivComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_after_sale_no_complete"
            app:layout_constraintBottom_toBottomOf="@+id/ivSubmit"
            app:layout_constraintLeft_toLeftOf="@+id/tvComplete"
            app:layout_constraintRight_toRightOf="@+id/tvComplete"
            app:layout_constraintTop_toTopOf="@+id/ivSubmit" />

        <TextView
            android:id="@+id/tvComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款完成"
            android:textColor="#565D73"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubmit"
            app:layout_constraintLeft_toRightOf="@+id/tvRefund"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSubmit" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvHandleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="【平台处理】"
        android:textColor="#04091A"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/clProgress"
        app:layout_constraintTop_toBottomOf="@+id/clProgress" />


    <TextView
        android:id="@+id/tvHandleDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="预计1-3个工作日内完成审核"
        android:textColor="#565D73"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/clProgress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHandleTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>