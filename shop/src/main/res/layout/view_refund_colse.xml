<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clRefundClose"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_e8f1ff_ffffff"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/tvRefundClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款申请已关闭"
        android:textColor="#04091A"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRefundCloseDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="平台已拒绝您的售后，售后保障期内，您可以重新发起售后申请"
        android:textColor="#565D73"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRefundClose" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRejectReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_f2f5f9_4"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRefundCloseDesc">

        <TextView
            android:id="@+id/tvRejectReason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="拒绝原因：商品损坏严重，不予退款商品损坏严重，不予退款商品损坏严重，不予退款商品损坏严重，不予退款..."
            android:textColor="#565D73"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>