<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml,UnusedAttribute">


    <TextView
        android:id="@+id/tvSecCateGoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_all_shop_enter"
        android:drawablePadding="8dp"
        android:drawableTint="@color/color_666666"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="洗发护发" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMinorCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tvSecCateGoryName"
        app:spanCount="3"
        tools:itemCount="10"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_category_minor" />


</androidx.constraintlayout.widget.ConstraintLayout>